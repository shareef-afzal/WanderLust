
    <% layout("/layouts/boilerplate")-%>

<div class="row ">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Edit Listing</h3>

        <!-- PUT to /listings/:id -->
        <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                    id="title"
                    name="listing[title]"
                    value="<%= listing.title %>"
                    class="form-control" required>
                <div class="valid-feedback">
                    Title Looks good!
                </div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea
                    id="description"
                    name="listing[description]"
                    class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Please enter short description</div>
            </div>

            <!-- Image URL -->
             <div class="mb-3">
                Original Listing Image <br>
                <img src=<%=originalImageUrl%> alt="">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload New Image</label>
                <input
                    id="image"
                    type="file"
                    name="listing[image]"
                    class="form-control">
            </div>

            <!-- Price & Country on one row -->
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input
                        id="price"
                        name="listing[price]"
                        value="<%= listing.price %>"
                        type="number"
                        class="form-control" required>
                    <div class="invalid-feedback">Please enter Price</div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input
                        id="country"
                        type="text"
                        name="listing[country]"
                        value="<%= listing.country %>"
                        class="form-control" required>
                    <div class="invalid-feedback">Please enter valid Country</div>
                </div>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input
                    id="location"
                    name="listing[location]"
                    value="<%= listing.location %>"
                    class="form-control" required>
                <div class="invalid-feedback">Please enter valid location</div>
            </div>
            <div class="mb-3">
                <label for="filters" class="form-label">Select The Relevant Filters </label>
                <select id="filters" name="listing[filters][]" class="form-control" multiple>
                    <option value="Rivers">Rivers</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Cities">Cities</option>
                    <option value="Castles">Castles</option>
                    <option value="Camping">Camping</option>
                    <option value="Pool">Pool</option>
                    <option value="Farm">Farm</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Domes">Domes</option>
                    <option value="Boats">Boats</option>
                </select>
                <div class="form-text">Hold Ctrl (Cmd on Mac) to select multiple filters.</div>
            </div>
            <button class="btn btn-dark edit-btn mt-3">Save Changes</button>
            <br><br>
        </form>
    </div>
</div>

